{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
        "label": "go run file",
        "type": "shell",
        "command": "go run ${file}",
        "problemMatcher": [
            "$go"
        ]
    },
    {
        "label": "go run package",
        "type": "shell",
        "command": "go run .",
        "problemMatcher": [
            "$go"
        ]
    },
    {
        "label": "go run app",
        "type": "shell",
        "command": "${workspaceFolder}/${config:app_name}",
        "dependsOn": "go build",
        "problemMatcher": [
            "$go"
        ]
    },
    {
        "label": "go build",
        "type": "shell",
        "command": "go build",
        "problemMatcher": [
            "$go"
        ]
    },
    {
        "label": "go clean",
        "type": "shell",
        "command": "go clean",
        "problemMatcher": [
            "$go"
        ]
    }
]
}